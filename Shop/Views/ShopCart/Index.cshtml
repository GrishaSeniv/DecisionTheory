@model ShopCartViewModel

<div class="row">
    <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Твоя корзина</span>
            <span class="badge badge-secondary badge-pill">1</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var el in Model.shopCart.listShopItems)
            {
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Твоя покупка:</h6>
                        <small class="text-muted">
                            <b>Одяг:</b>@el.car.name<br />
                            <b>Ціна:</b>@el.car.price.ToString("c")
                        </small>

                    </div>
                </li>
            }
        </ul>
        <form class="card p-2">
            <div class="input-group">

                <div class="input-group-append">
                    <button type="submit" class="btn btn-secondary" asp-controller="Order" asp-action="Checkout">Оплатити</button>
                </div>
            </div>
        </form>
    </div>
</div>




